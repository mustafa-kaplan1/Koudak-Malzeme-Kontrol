@model KoudakMalzeme.Shared.Entities.Malzeme

@{
	ViewData["Title"] = "Malzeme Düzenle";
}

<div class="row justify-content-center">
	<div class="col-md-8">
		<div class="card shadow">
			<div class="card-header bg-primary text-white">
				<h4 class="mb-0">Malzeme Düzenle</h4>
			</div>
			<div class="card-body">
				<form asp-action="Duzenle" method="post">
					<input type="hidden" asp-for="Id" />
					<input type="hidden" asp-for="GuncelStok" />

					<div class="mb-3">
						<label asp-for="Ad" class="form-label fw-bold">Malzeme Adı</label>
						<input asp-for="Ad" class="form-control" required />
					</div>

					<div class="row">
						<div class="col-md-6 mb-3">
							<label asp-for="ToplamStok" class="form-label fw-bold">Toplam Stok</label>
							<input asp-for="ToplamStok" type="number" class="form-control" min="1" required />
						</div>
						<div class="col-md-6 mb-3">
							<label class="form-label text-muted">Şu an Rafta</label>
							<input value="@Model.GuncelStok" class="form-control" disabled />
						</div>
					</div>

					<div class="mb-3">
						<label asp-for="Aciklama" class="form-label">Açıklama</label>
						<textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
					</div>

					<div class="mb-3">
						<label asp-for="GorselYolu" class="form-label">Görsel URL</label>
						<input asp-for="GorselYolu" class="form-control" />
					</div>

					<div class="d-flex justify-content-end gap-2">
						<a asp-action="Index" class="btn btn-secondary">İptal</a>
						<button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>