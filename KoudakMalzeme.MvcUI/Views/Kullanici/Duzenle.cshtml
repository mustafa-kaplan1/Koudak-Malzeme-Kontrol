@model KoudakMalzeme.Shared.Entities.Kullanici
@{
	ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="row justify-content-center">
	<div class="col-md-8">
		<div class="card shadow-sm border-0">
			<div class="card-header bg-primary text-white">
				<h5 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i> Kullanıcı Düzenle</h5>
			</div>
			<div class="card-body">
				<form asp-action="Duzenle" method="post">
					<input type="hidden" asp-for="Id" />
					<input type="hidden" asp-for="PasswordHash" />
					<input type="hidden" asp-for="PasswordSalt" />

					<div class="row">
						<div class="col-md-6 mb-3">
							<label asp-for="Ad" class="form-label fw-bold">Ad</label>
							<input asp-for="Ad" class="form-control" required />
						</div>
						<div class="col-md-6 mb-3">
							<label asp-for="Soyad" class="form-label fw-bold">Soyad</label>
							<input asp-for="Soyad" class="form-control" required />
						</div>
					</div>

					<div class="row">
						<div class="col-md-6 mb-3">
							<label asp-for="OkulNo" class="form-label fw-bold">Okul No</label>
							<input asp-for="OkulNo" class="form-control" required />
						</div>
						<div class="col-md-6 mb-3">
							<label asp-for="Rol" class="form-label fw-bold">Kullanıcı Rolü</label>
							<select asp-for="Rol" class="form-select"
								asp-items="Html.GetEnumSelectList<KoudakMalzeme.Shared.Enums.KullaniciRolu>()"></select>
						</div>
					</div>

					<div class="mb-3">
						<label asp-for="Email" class="form-label">E-Posta</label>
						<input asp-for="Email" type="email" class="form-control" required />
					</div>

					<div class="mb-3">
						<label asp-for="Telefon" class="form-label">Telefon</label>
						<input asp-for="Telefon" class="form-control" />
					</div>

					<div class="form-check mb-4">
						<input asp-for="IlkGirisYapildiMi" class="form-check-input" type="checkbox" id="chkIlkGiris">
						<label class="form-check-label text-muted" for="chkIlkGiris">
							İlk giriş yapıldı (Şifre sıfırlamak için işareti kaldırın)
						</label>
					</div>

					<div class="d-flex justify-content-end gap-2">
						<a asp-action="Yonetim" class="btn btn-secondary">İptal</a>
						<button type="submit" class="btn btn-primary px-4">Değişiklikleri Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>