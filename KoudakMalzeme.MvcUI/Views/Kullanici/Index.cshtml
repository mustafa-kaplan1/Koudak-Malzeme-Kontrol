@model List<KoudakMalzeme.Shared.Entities.Kullanici>
@{
	ViewData["Title"] = "Üye Listesi";
}

<h2 class="mb-4 text-success"><i class="fa-solid fa-users"></i> Kulüp Üyeleri</h2>

<div class="card shadow border-0">
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-hover align-middle">
				<thead class="table-light">
					<tr>
						<th>Ad Soyad</th>
						<th>Okul No</th>
						<th>Rol</th>
						<th>İşlem</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var user in Model)
					{
						<tr>
							<td class="fw-bold">
								<div class="d-flex align-items-center">
									<div class="bg-success text-white rounded-circle d-flex justify-content-center align-items-center me-2"
										style="width: 40px; height: 40px;">
										@(user.Ad.Length > 0 ? user.Ad[0] : '?')
									</div>
									@user.Ad @user.Soyad
								</div>
							</td>
							<td>@user.OkulNo</td>
							<td>
								@if (user.Rol == KoudakMalzeme.Shared.Enums.KullaniciRolu.Admin)
								{
									<span class="badge bg-danger">Yönetici</span>
								}
								else if (user.Rol == KoudakMalzeme.Shared.Enums.KullaniciRolu.Malzemeci)
								{
									<span class="badge bg-warning text-dark">Malzemeci</span>
								}
								else
								{
									<span class="badge bg-secondary">Üye</span>
								}
							</td>
							<td>
								<a asp-action="Profil" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
									<i class="fa-solid fa-id-card"></i> Profil
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
